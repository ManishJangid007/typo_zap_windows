<Window x:Class="TypoZap.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About TypoZap"
        Height="300"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="TypoZap"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="1" 
                   Text="A Windows utility app that fixes grammar errors instantly using Gemini API."
                   FontSize="14"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>
        
        <!-- Usage -->
        <TextBlock Grid.Row="2" 
                   Text="Press Ctrl+Alt+Q to correct selected text."
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Credits and Link -->
        <StackPanel Grid.Row="4" HorizontalAlignment="Center">
            <TextBlock Text="Visit "
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            
            <TextBlock x:Name="GitHubLink"
                       Text="https://github.com/ManishJangid007/typo_zap_windows"
                       FontSize="12"
                       Foreground="Blue"
                       HorizontalAlignment="Center"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       MouseLeftButtonDown="GitHubLink_MouseLeftButtonDown"
                       Margin="0,0,0,5"/>
            
            <TextBlock Text="to see documentation"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
