<Window x:Class="TypoZap.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TypoZap Settings"
        Height="450"
        Width="500"
        MinHeight="400"
        MinWidth="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="TypoZap Settings"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Hotkey Settings -->
        <GroupBox Grid.Row="1" Header="Hotkey Settings" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Current Hotkey: Ctrl+Alt+Q"
                           FontSize="14"
                           Margin="0,0,0,10"/>
                
                <TextBlock Grid.Row="1" 
                           Text="Note: Hotkey changes require restarting the application"
                           FontSize="11"
                           Foreground="Gray"
                           TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>
        
        <!-- API Settings -->
        <GroupBox Grid.Row="2" Header="API Settings" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Button x:Name="ChangeApiKeyButton"
                        Grid.Row="0"
                        Content="Change API Key"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Left"
                        Click="ChangeApiKeyButton_Click"/>
                
                <TextBlock Grid.Row="1" 
                           Text="Your API key is stored securely using Windows encryption"
                           FontSize="11"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Advanced Settings -->
        <GroupBox Grid.Row="3" Header="Advanced Settings" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <CheckBox x:Name="StartWithWindowsCheckBox"
                          Grid.Row="0"
                          Content="Start TypoZap with Windows"
                          IsChecked="False"
                          Margin="0,0,0,5"/>
                
                <CheckBox x:Name="MinimizeToTrayCheckBox"
                          Grid.Row="1"
                          Content="Minimize to system tray"
                          IsChecked="True"/>
            </Grid>
        </GroupBox>
        
        <!-- Spacer -->
        <Grid Grid.Row="4" />
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button x:Name="ResetButton"
                    Content="Reset to Defaults"
                    Width="120"
                    Height="32"
                    Margin="0,0,10,0"
                    Click="ResetButton_Click"/>
            
            <Button x:Name="SaveButton"
                    Content="Save Settings"
                    Width="100"
                    Height="32"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
            
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Height="32"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
