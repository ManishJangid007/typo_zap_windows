<Window x:Class="TypoZap.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TypoZap Settings"
        Height="450"
        Width="500"
        MinHeight="400"
        MinWidth="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="TypoZap Settings"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Hotkey Settings -->
        <GroupBox Grid.Row="1" Header="Hotkey Settings" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Current Hotkey:"
                           FontSize="14"
                           Margin="0,0,0,10"/>
                
                <TextBlock x:Name="CurrentHotkeyTextBlock"
                           Grid.Row="1" 
                           Text="Ctrl+Alt+Q"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="Blue"
                           Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="RecordHotkeyButton"
                            Content="Record New Hotkey"
                            Width="140"
                            Height="30"
                            Margin="0,0,10,0"
                            Click="RecordHotkeyButton_Click"/>
                    
                    <Button x:Name="ResetHotkeyButton"
                            Content="Reset to Default"
                            Width="120"
                            Height="30"
                            Click="ResetHotkeyButton_Click"/>
                </StackPanel>
                
                <TextBlock Grid.Row="3" 
                           Text="Note: Save settings to apply hotkey changes"
                           FontSize="11"
                           Foreground="Gray"
                           TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>
        
        <!-- API Settings -->
        <GroupBox Grid.Row="2" Header="API Settings" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Button x:Name="ChangeApiKeyButton"
                        Grid.Row="0"
                        Content="Change API Key"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Left"
                        Click="ChangeApiKeyButton_Click"/>
                
                <TextBlock Grid.Row="1" 
                           Text="Your API key is stored securely using Windows encryption"
                           FontSize="11"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Tone Settings -->
        <GroupBox Grid.Row="3" Header="Tone Settings" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Select the tone for text correction:"
                           FontSize="14"
                           Margin="0,0,0,10"/>
                
                <ComboBox x:Name="ToneComboBox"
                          Grid.Row="1"
                          Height="32"
                          Margin="0,0,0,5"
                          DisplayMemberPath="Title"
                          SelectionChanged="ToneComboBox_SelectionChanged"/>
                
                <TextBlock x:Name="ToneDescriptionTextBlock"
                           Grid.Row="2"
                           Text=""
                           FontSize="11"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Spacer -->
        <Grid Grid.Row="4" />
        
        <!-- Buttons and Credits -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Credits Link -->
            <TextBlock Grid.Column="0"
                       x:Name="CreditsLink"
                       Text="Developed by Manish Jangid"
                       FontSize="10"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       MouseLeftButtonDown="CreditsLink_MouseLeftButtonDown"/>
            
            <!-- Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                
                <Button x:Name="SaveButton"
                        Content="Save Settings"
                        Width="100"
                        Height="32"
                        Margin="0,0,10,0"
                        IsDefault="True"
                        Click="SaveButton_Click"/>
                
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="80"
                        Height="32"
                        IsCancel="True"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
        </Grid>
    </ScrollViewer>
</Window>
