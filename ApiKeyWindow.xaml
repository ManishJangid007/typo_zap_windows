<Window x:Class="TypoZap.ApiKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gemini API Key Required"
        Height="300"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="280"
        MinWidth="400"
        WindowStyle="SingleBorderWindow">
    
        <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Please enter your Gemini API key"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <!-- Help text with clickable link -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <TextBlock Text="You can get your API key from:"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="ApiKeyLinkTextBlock"
                       Text="https://aistudio.google.com/apikey"
                       FontSize="12"
                       Foreground="Blue"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       MouseLeftButtonDown="ApiKeyLinkTextBlock_MouseLeftButtonDown"/>
        </StackPanel>
        
        <!-- API Key input -->
        <TextBox x:Name="ApiKeyTextBox"
                 Grid.Row="2"
                 Height="32"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 Margin="0,0,0,20"
                 Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,10">
            
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="80"
                    Height="32"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
            
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Height="32"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
        
        <!-- Credits Link -->
        <TextBlock Grid.Row="5"
                   x:Name="CreditsLink"
                   Text="Developed by Manish Jangid"
                   FontSize="10"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Cursor="Hand"
                   TextDecorations="Underline"
                   MouseLeftButtonDown="CreditsLink_MouseLeftButtonDown"
                   Margin="0,5,0,0"/>
        
        <!-- Status message -->
        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="6"
                   Text=""
                   FontSize="12"
                   Foreground="Blue"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
